<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/distance_five_dp">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/id_item_file_image_result"
            style="@style/wrap_content_attr"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/id_item_file_name"
            style="@style/wrap_content_attr"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/id_item_file_image_result"
            android:text="文件名"
            android:textSize="@dimen/item_file_text_size"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:id="@+id/id_tv_item_file_size_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="大小"
            android:textSize="@dimen/item_file_text_size"/>

        <TextView
            android:id="@+id/id_tv_item_file_name_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="主讲人"
            android:textSize="@dimen/item_file_text_size"/>
    </LinearLayout>

    <TextView
        android:id="@+id/id_tv_item_file_agenda_result"

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="right"
        android:text="议程"
        android:textSize="@dimen/item_file_text_size"/>
</LinearLayout>
