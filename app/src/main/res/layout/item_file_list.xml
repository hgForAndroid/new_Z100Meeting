<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/distance_five_dp">

    <RelativeLayout
        android:id="@+id/id_item_file_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/file_list_min_height">

        <ImageView
            android:layout_alignParentLeft="true"
            android:id="@+id/id_item_file_image"
            style="@style/wrap_content_attr"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:textSize="@dimen/item_file_text_size"
            android:id="@+id/id_item_file_name"
            android:layout_width="wrap_content"
            android:maxWidth="400dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/id_item_file_image"
            android:text="文件名"/>

        <TextView
            android:textSize="@dimen/item_file_text_size"
            android:id="@+id/id_item_file_size"
            style="@style/wrap_content_attr"
            android:layout_alignBaseline="@id/id_item_file_name"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:text="14kb"
            />

        <TextView
            android:textSize="@dimen/item_file_text_size"
            android:id="@+id/id_item_file_keynote_speaker"
            style="@style/wrap_content_attr"
            android:layout_alignBaseline="@id/id_item_file_name"
            android:layout_alignParentRight="true"
            android:gravity="center_horizontal"
            android:paddingRight="@dimen/distance_five_dp"
            android:text="人名"
            />

    </RelativeLayout>
</LinearLayout>
