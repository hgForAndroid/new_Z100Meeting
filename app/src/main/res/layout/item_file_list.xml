<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_item_file_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/distance_five_dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_item_file_image"
            style="@style/wrap_content_attr"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/id_item_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="400dp"
            android:text="文件名"
            android:textSize="@dimen/item_file_text_size"/>
    </LinearLayout>

    <TextView
        android:id="@+id/id_item_file_size"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="14kb"
        android:textSize="@dimen/item_file_text_size"/>

    <TextView
        android:id="@+id/id_item_file_keynote_speaker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/id_item_file_name"
        android:layout_alignParentRight="true"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:paddingRight="@dimen/distance_five_dp"
        android:text="人名"
        android:textSize="@dimen/item_file_text_size"/>
</LinearLayout>
