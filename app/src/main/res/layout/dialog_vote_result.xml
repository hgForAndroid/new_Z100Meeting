<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="800dp"
              android:layout_height="700dp">
    <TextView
        android:background="@color/color_navBar_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/nav_bar_height"
        android:text="投票结果"
        android:textSize="@dimen/dialog_meeting_info_text_size"
        android:gravity="center"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/id_vote_result_chart"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center"
            android:id="@+id/id_tv_vote_result_show_result"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/id_tv_vote_result_show_error"
            android:gravity="center"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>