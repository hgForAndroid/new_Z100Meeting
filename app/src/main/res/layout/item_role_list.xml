<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <RelativeLayout
        android:padding="2dp"
        android:id="@+id/id_item_role_layout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/content_function_introduce"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/id_item_role_image"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/role"/>
        <TextView
            android:id="@+id/id_item_role_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="角色"
            android:layout_toRightOf="@id/id_item_role_image"
            android:layout_centerVertical="true"
            />


    </RelativeLayout>

</LinearLayout>
