<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/id_item_agenda_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:textSize="@dimen/item_file_text_size"
            android:id="@+id/id_item_agenda_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/distance_ten_dp"
            android:drawableTop="@drawable/icon_file_normal"
            android:text="议程1"
            android:gravity="center"
            android:textColor="@color/color_agenda_item_text"/>

        <TextView
            android:visibility="gone"
            android:textSize="@dimen/item_file_text_size"
            android:id="@+id/id_item_agenda_title"
            android:layout_width="@dimen/distance_one_hundred_dp"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:text="标题"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@android:color/black"/>
    </LinearLayout>


</LinearLayout>