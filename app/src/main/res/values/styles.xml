<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--主界面    RadioButton的共有属性-->
    <style name="radio_button_same_attr">
        <item name="android:textColor">@drawable/tab_textcolor_selector</item>
        <item name="android:button">@null</item>
        <item name="android:layout_width">@dimen/each_tab_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/tab_bg_selector</item>
    </style>

    <!--文件界面   文件列表  layout:item_file_list-->
    <style name="weight_for_one">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!--宽高均为自适应-->
    <style name="wrap_content_attr">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!--文件界面，文件列表上边的标签，文件名，大小，主讲人 的共有属性-->
    <style name="file_name_size_keynote_speaker">
        <item name="android:textSize">@dimen/item_file_text_size</item>
        <item name="android:padding">@dimen/distance_five_dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/color_file_size_bg</item>
    </style>
    <!--会议概况左边textView的共同属性-->
    <style name="dialog_meeting_left_text_view_attr">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/dialog_meeting_info_text_size</item>
        <item name="android:padding">@dimen/distance_five_dp</item>
    </style>
    <!--会议概况右边textView的共同属性-->
    <style name="dialog_meeting_right_text_view_attr">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/dialog_meeting_info_text_size</item>
        <item name="android:paddingLeft">@dimen/distance_five_dp</item>
        <item name="android:padding">@dimen/distance_five_dp</item>
    </style>
</resources>
